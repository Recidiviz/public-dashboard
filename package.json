{
  "name": "public-dashboard",
  "description": "A public-facing dashboard to help educate citizens and build accountability",
  "version": "0.1.0",
  "private": true,
  "repository": "git@github.com:Recidiviz/public-dashboard.git",
  "workspaces": [
    "spotlight-api",
    "public-dashboard-client"
  ],
  "author": "Recidiviz <team@recidiviz.org>",
  "license": "GNU General Public License v3",
  "scripts": {
    "demo:pd": "IS_DEMO=true REACT_APP_IS_DEMO=true REACT_APP_API_URL=http://localhost:3001 yarn dev:pd",
    "dev:api": "yarn workspace spotlight-api run dev",
    "dev:pd": "run-p dev:api dev:pdclient",
    "dev:pdclient": "yarn workspace public-dashboard-client run dev",
    "lint": "yarn workspaces run lint",
    "test": "yarn workspaces run test"
  },
  "devDependencies": {
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": ">=4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn workspaces run precommit"
    }
  }
}
